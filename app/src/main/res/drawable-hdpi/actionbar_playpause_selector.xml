<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--默认背景-->
    <item>
        <bitmap android:src="@drawable/note_btn_play_white" android:tileMode="disabled" android:gravity="top"/>
    </item>

    <item android:state_checked="false">
        <bitmap android:src="@drawable/note_btn_play_white" android:tileMode="disabled" android:gravity="top"/>
    </item>

    <item android:state_checked="true">
        <bitmap android:src="@drawable/note_btn_pause_white" android:tileMode="disabled" android:gravity="top"/>
    </item>

</selector>

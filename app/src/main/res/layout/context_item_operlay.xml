<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/local_music_list_item_operlay_frame"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#242424"
    android:orientation="horizontal"
    android:visibility="gone">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/holo_black_selector"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/operlay_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/holo_black_selector"
            android:src="@drawable/operlay_icn_play" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放"
            android:textColor="#ffffff"
            android:textSize="12sp" />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/tab_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/holo_black_selector"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/operlay_addlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/operlay_icn_addlist" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加到歌单"
            android:textColor="#ffffff"
            android:textSize="12sp" />


    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/tab_line" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/holo_black_selector"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/operlay_dlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/holo_black_selector"
            android:src="@drawable/operlay_icn_dlt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="12sp" />


    </LinearLayout>


</LinearLayout>
